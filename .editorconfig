# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
# Change these settings to your own preference
indent_style = space
indent_size = 4

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
# Markdown files should use 2 spaces for indentation
indent_size = 2
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.{js,css,scss}]
indent_size = 2

[*.{py}]
indent_size = 4

# Make these match to your gitignore
[package-lock.json]
insert_final_newline = false

[package.json]
indent_size = 2

[.travis.yml]
indent_size = 2
